@model UpdateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Responsive Table</h6>
                <div class="table-responsive">

                    <form method="post">
                        
                        <input type="hidden" asp-for="EmployeeID" class="form-control" />
                        <label>Name:</label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <label>Title:</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <label>Mail:</label>
                        <input type="text" asp-for="Mail" class="form-control" />
                        <label>Phone Number:</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" />
                        <label>Image:</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <button class="btn btn-square btn-outline-success m-2" title="Kaydet"><i class="fas fa-check"></i></button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

