@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
@{
    int count = 1;
}
<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Recent Salse</h6>
            <a href="">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col">Image</th>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Title</th>
                        <th scope="col">Mail</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Güncelle</th>
                        <th scope="col">Sil</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                      
                        <td><img class="rounded-circle" src="@item.ImageUrl" alt="" style="width: 40px; height: 40px;"></td>
                        <td>@count</td>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td>@item.Mail</td>
                        <td>@item.PhoneNumber</td>
                            <td> <button onclick="window.location.href='/Employee/UpdateEmployee/@item.EmployeeID'" type="button" class="btn btn-square btn-primary m-2"><i class="fas fa-pencil-alt"></i> </button></td>
                            <td><button onclick="window.location.href='/Employee/DeleteEmployee/@item.EmployeeID'" type="button" class="btn btn-square btn-danger m-2"> <i class="fas fa-trash-alt"></i> </button></td>

                        </tr>
                        count = count + 1;
                    }
                </tbody>
               
            </table>
            <button onclick="window.location.href='/Employee/CreateEmployee'" type="button" class="btn btn-success m-2"><i class="fa fa-plus me-2"></i>Personel Ekle</button>
             
        </div>
    </div>
</div>

