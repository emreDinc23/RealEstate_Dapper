@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Responsive Table</h6>
                <div class="table-responsive">

                    <form method="post">
                        
                        <input type="hidden" asp-for="CategoryID" class="form-control" />
                        <label>Kategori Name:</label>
                        <input type="text"  asp-for="CategoryName" class="form-control" />
                        <button class="btn btn-square btn-outline-success m-2" title="Güncelle"><i class="fas fa-check"></i></button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

