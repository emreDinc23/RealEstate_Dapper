@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
@{
    int count = 1;

}
<style>
    .table {
        text-align: center;
    }

    th, td {
        vertical-align: middle;
    }

    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Portföy Listesi</h6>
                <div class="table-responsive">
                    <table class="table" style="text-align:center">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">GÜncelle</th>

                                <th scope="col">Sil</th>
                                <th scope="col">Sitede Gör</th>



                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <th scope="row">@x.productTitle</th>
                                    <th scope="row">@x.productCity</th>
                                    <th scope="row">@x.categoryName</th>
                                    <th scope="row">@x.productPrice</th>
                                    <th scope="row">@x.Type</th>
                                    
                                    <td> <button onclick="window.location.href=''" type="button" class="btn btn-square btn-primary m-2"><i class="fas fa-pencil-alt"></i> </button></td>
                                    <td><button onclick="window.location.href=''" type="button" class="btn btn-square btn-danger m-2"> <i class="fas fa-trash-alt"></i> </button></td>
                                    <td><button onclick="window.location.href=''" type="button" class="btn btn-square btn-secondary m-2"> <i class="fas fa-forward"></i> </button></td>

                                </tr>

                                count = count + 1;

                            }

                        </tbody>

                    </table>
                    <button onclick="window.location.href=''" title="Portföy Ekle" type="button" class="btn btn-square btn-success m-2"> <i class="fas fa-plus"></i></button> Ekle
                </div>
            </div>

        </div>
    </div>
</div>

