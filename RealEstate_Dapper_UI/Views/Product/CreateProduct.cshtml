@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
                <div class="table-responsive">

                    <form method="post">
                        <label>İlan Başlığı</label>
                        <input type="text" asp-for="productTitle" class="form-control" />
                        <br/>
                        <label>Şehir</label>
                        <input type="text" asp-for="productTitle" class="form-control" />
                        <br/>
                        <label>İlçe</label>
                        <input type="text" asp-for="productTitle" class="form-control" />
                        <br/>
                        <label>Kategori</label>
                        <input type="text" asp-for="productTitle" class="form-control" />
                        <br />
                        <label>Fiyat</label>
                        <input type="text" asp-for="productPrice" class="form-control" />
                        <br />
                        <label>Tür</label>
                        <input type="text" asp-for="Type" class="form-control" />
                        <br />
                        <label>Kapak Fotoğrafı</label>
                        <input type="text" asp-for="productCoverImage" class="form-control" />
                        <br />
                        <label>İlan Açık Adresi</label>
                        <textarea type="text" asp-for="productAdress" rows="5" class="form-control" />
                        <br />
                        <button class="btn btn-square btn-outline-success m-2" title="Kaydet"><i class="fas fa-check"></i></button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>


